<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 1:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:id="@+id/add1Player1"
        android:onClick="btAdd1Player1OnClick"/>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3"
        android:id="@+id/add3Player1"
        android:onClick="btAdd3Player1OnClick"/>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+6"
        android:id="@+id/add6Player1"
        android:onClick="btAdd6Player1OnClick"/>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+9"
        android:id="@+id/add9Player1"
        android:onClick="btAdd9Player1OnClick"/>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+12"
        android:id="@+id/add12Player1"
        android:onClick="btAdd12Player1OnClick"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 2:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:id="@+id/add1Player2"
            android:onClick="btAdd1Player2OnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:id="@+id/add3Player2"
            android:onClick="btAdd3Player2OnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+6"
            android:id="@+id/add6Player2"
            android:onClick="btAdd6Player2OnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+9"
            android:id="@+id/add9Player2"
            android:onClick="btAdd9Player2OnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+12"
            android:id="@+id/add12Player2"
            android:onClick="btAdd12Player2OnClick"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hist. de Jogadas"
        android:id="@+id/btHistorico"
        android:onClick="btHistoricoOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zerar HistÃ³rico"
        android:id="@+id/btZerar"
        android:onClick="btZerarOnClick" />

</LinearLayout>